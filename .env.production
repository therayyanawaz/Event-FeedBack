# MongoDB Connection - Replace with actual MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/event-feedback

# Groq API - Replace with actual API key
GROQ_API_KEY=your_groq_api_key

# Application Settings
NEXT_PUBLIC_API_URL=https://your-vercel-app.vercel.app/api
NODE_ENV=production

# Authentication
JWT_SECRET=use-a-strong-random-string-here
JWT_EXPIRY=24h

# Force Node.js runtime for Next.js
NEXT_RUNTIME=nodejs

# Analytics
ANALYTICS_ENABLED=true

# API Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info

# CORS Settings
CORS_ORIGIN=https://your-vercel-app.vercel.app 